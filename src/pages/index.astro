---
import Layout from "../layouts/Layout.astro";
import Editor from "../components/Editor.astro";
import Preview from "../components/Preview.astro";
import CreateLinkModal from "../components/CreateLinkModal.astro";
import Link from "../icons/Link.astro";
import { getAllBins } from '../lib/db.ts'

console.log(await getAllBins())
---

<Layout>
  <CreateLinkModal />
  <article>
    <header>
      <h3>AppHub</h3>
      <div class="buttons">
        <button id="link-modal">
          <Link />
        </button>
      </div>
    </header>
    <div class="split">
      <div id="split-0">
        <Editor />
      </div>
      <div id="split-1">
        <Preview />
      </div>
    </div>
  </article>

  <script>
    import { $showModal } from "../store/store";
    import Split from "split.js";

    let split = Split(["#split-0", "#split-1"], {
      minSize: 10,
      gutterSize: 10,
      snapOffset: 0,
      direction: "vertical",
    });

    const modalButton = document.querySelector("#link-modal")
    modalButton?.addEventListener("click", () => $showModal.set(true) )
  </script> 

  <style>
    article {
      width: 100%;
      height: 100dvh;
      padding: 0;
      display: grid;
      grid-template-rows: auto 1fr;
      overflow: hidden;
    }

    article header {
      padding: 0.5rem;
      margin: 0;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    article header h3 {
      margin: 0;
    }

    article header .buttons button {
      padding: 0.5rem;
    }

    .split {
      width: 100%;
      height: 100%;
      overflow: hidden;
    }

    :global(.gutter) {
      background-color: #eee;
      background-repeat: no-repeat;
      background-position: 50%;
    }

    :global(.gutter.gutter-vertical) {
      background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAB4AAAAFAQMAAABo7865AAAABlBMVEVHcEzMzMzyAv2sAAAAAXRSTlMAQObYZgAAABBJREFUeF5jOAMEEAIEEFwAn3kMwcB6I2AAAAAASUVORK5CYII=");
      cursor: row-resize;
    }
  </style>
</Layout>
